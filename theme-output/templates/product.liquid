            <div class="col-md-6 col-md-offset-3 featured-product">
              <a href="/products/the-kena">
                <img src="{{ all_products['the-kena'].featured_image | img_url: 'large' }}" alt="Kena Squeaker Toy" class="featured-image push-hover">
                <div class="product-title">The Kena</div>
